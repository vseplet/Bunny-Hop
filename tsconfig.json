{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/keys": ["./keys/mod.ts"],
      "@/config": ["./config/mod.ts"],
      "$/*": ["./source/*"],
      "#/*": ["./scripts/*"]
    }
  },
  "include": [
    "source/**/*.ts",
    "scripts/**/*.ts",
    "config/**/*.ts",
    "keys/**/*.ts"
  ],
  "exclude": ["node_modules", "target", "dist"]
}
